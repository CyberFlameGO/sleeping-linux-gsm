{
  "name": "sleep-linux-gsm",
  "version": "0.0.1",
  "description": "Put your server to rest while no one is using it",
  "bin": "build/index.js",
  "main": "build/index.js",
  "scripts": {
    "start": "npm run prebuild && npm run build:typescript && node .",
    "debug": "nodemon",
    "prebuild": "rimraf ./build/ ./bin/ && cpx-fixed \"./views/**/*.*\" ./build/views",
    "build": "npm-run-all build:*",
    "build:typescript": "tsc",
    "build:win": "pkg build/index.js --config package.json --target node14-win-x64 --output bin/sleeping-linux-gsm.exe",
    "build:linux": "pkg build/index.js --config package.json --target node14-linux-x64 --output bin/sleeping-linux-gsm.run"
  },
  "author": "vincss",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "express-handlebars": "^5.3.3",
    "js-yaml": "^4.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-handlebars": "^3.1.0",
    "@types/js-yaml": "^4.0.3",
    "@types/node": "^14.17.12",
    "cpx-fixed": "^1.6.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.3.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.2"
  },
  "pkg": {
    "scripts": "build/*.js",
    "assets": [
      "build/views/**/*"
    ]
  }
}